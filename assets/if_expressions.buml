<node name="test">
    <node name="container" class="class1 class2">
        <txt name="main">Index is {{state.index.to_string()}}</txt>
        <if condition="state.index == 0"><txt name="is_zero" class="if_text">Index is ZERO</txt></if>
        <else condition="state.index > 10"><txt name="is_large" class="if_text">Index is Large</txt></else>
        <else condition="state.index > 5"><txt name="is_large" class="if_text">Index is Medium</txt></else>
        <else><txt name="is_small" class="if_text">Index is Small</txt></else>
    </node>
</node>