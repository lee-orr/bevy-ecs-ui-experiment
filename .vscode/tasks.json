{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo run -p ui-experiment --example simple",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Simple UI"
		},
		{
			"type": "shell",
			"command": "cargo run -p hot_reload_example",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Simple Hot Reload"
		},
		{
			"type": "shell",
			"command": "cargo clippy --fix --allow-dirty && cargo fmt",
			"label": "Clippy & Fmt"
		}
	]
}