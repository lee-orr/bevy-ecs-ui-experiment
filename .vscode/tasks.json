{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo run --example simple",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Simple"
		},
		{
			"type": "shell",
			"command": "cargo run --example simple_expressions",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Expressions"
		},
		{
			"type": "shell",
			"command": "cargo run --example for_expressions",
			"problemMatcher": [
				"$rustc"
			],
			"label": "For"
		},
		{
			"type": "shell",
			"command": "cargo run --example if_expressions",
			"problemMatcher": [
				"$rustc"
			],
			"label": "If"
		},
		{
			"type": "shell",
			"command": "cargo clippy --fix --allow-dirty && cargo fmt",
			"label": "Clippy & Fmt"
		},
		{
			"type": "shell",
			"command": "cargo test",
			"label": "Test"
		}
	]
}